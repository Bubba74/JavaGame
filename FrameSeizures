import java.awt.Color;
import java.util.Scanner;

import javax.swing.JFrame;
import javax.swing.*;

public class Seizures { 
	public static void main(String Args[]){
		JFrame window = new JFrame();
		Scanner input = new Scanner (System.in);
		System.out.println("What should the width be?");
		int winx = input.nextInt();
		System.out.println("What should the height be?");
		int winy = input.nextInt();
		if (winx > 1382){
			winx = 1382;
		}
		if (winy > 744){
			winy = 740;
		}
		
		window.setSize(winx , winy);
		window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		window.setVisible(true);
		window.getContentPane().setBackground(Color.lightGray);
		window.setTitle("This is for you Hannah...");
		//double mouseY = window.getMousePosition().getY();
		double x1 , x2 , x3 , x4;
		x1 = (winx / 4);
		x2 = ((winx / 4) * 2);
		x3 = ((winx / 4 ) * 3);
		x4 = (winx) + 10;
		while(true){
		double mouseX = window.getMousePosition().getX();
		System.out.println(mouseX);
		
		if (mouseX < x1){
			window.getContentPane().setBackground(Color.blue);
		}
		if (mouseX < x2){
			if (mouseX > x1){
				window.getContentPane().setBackground(Color.green);		
			}
		}
		if (mouseX < x3){
			if (mouseX > x2){
				window.getContentPane().setBackground(Color.yellow);
				 
			}
		}
		if (mouseX < x4){
			if (mouseX > x3){
				window.getContentPane().setBackground(Color.magenta);
			}
		}
		
		}//while loop
		}//main method
		
	}//main class
